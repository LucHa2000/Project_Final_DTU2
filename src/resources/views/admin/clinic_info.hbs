
<div class="flex h-full">
  {{>header_admin}} 
  <div class="container mt-2 ml-2 w-full h-full centers">
        <div class="mb-4 border-b border-gray-200 w-full text-center mt-4">
          <h4 class="font-bold text-gray-1000 text-center text-xl">Thông tin khoa</h4>
        </div>
        <div class="app-section__controls mb-4 w-full">
          <a href="/admin/clinic" class="inline-flex items-center py-2 px-4 mr-3 text-sm font-medium text-gray-500 bg-white rounded-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700">
            <svg class="mr-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
            Trở về
          </a>
        </div>
        <div class="p-4 bg-gray-50 rounded-lg max-h-[90vh] min-h-[90vh] overflow-y-auto">

          <div class="is-row flex items-center justify-center">
              <div class="relative">
                <img class="w-36 h-36 rounded-full" src="../uploads/ffd9ef57389c1f49b26f6f95c594f8d8" alt="">
              </div>
          </div>
        {{!-- <div class="">
                <img id="profile-avatar" class="w-36 h-36 rounded-full" src="../../../public/uploads/{{clinic.image}}" alt="">
          </div> --}}
            <div class="is-row flex w-full mt-4">
              <div class="is-half flex-1">
                <label class="block mb-2 text-sm font-bold text-gray-900 " for="name">Tên khoa</label>
                <span class="bg-gray-5 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full py-2.5 " >{{clinic.name}}</span>
              </div>
             <div class="is-half flex-1">
                <label class="block mb-2 text-sm font-bold text-gray-900 " for="description">Mô tả</label>
                <span class="bg-gray-5 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full py-2.5 " >{{clinic.description}}</span>
              </div>
            </div>
            <div class="is-row mt-4">
              <div class="is-full">
                <label class="block mb-2 text-sm font-bold text-gray-900 " for="description">Bác sĩ thuộc khoa</label>
                {{#each doctors}}
                <span class="bg-gray-5 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 " >{{this.firstName}} {{this.lastName}}</span>
                {{else}}
                      <pclass="bg-gray-5 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 ">
                          Không có bác sĩ
                      <p>
                {{/each}}
              </div>

            </div>
              <br>
            <div class="is-row flex justify-end">
                <a href="/clinic/{{{clinic.id}}}" class="btn--primary bg-[#1a355b] text-white text-center px-4 py-2 rounded-lg font-bold flex justify-between items-center" type="button">Cập nhật thông tin khoa<svg class="ml-2 w-6 h-6 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </a>
            </div>
          </form>
          
        </div>
        </div>
        <br>
  </div>
  



</div>



  