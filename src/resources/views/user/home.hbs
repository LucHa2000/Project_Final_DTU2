<div class="app-container flex flex-col homepage-container">
  {{>nav}}
  
  <main class="app__main flex w-full">
    <div class="medicals__sidenav max-w-[70px] mt-[100px]">
      <ul class="medicals__sidenav__list flex flex-col justify-center">
        <li class="medicals__sidenav__item medicals__sidenav__item">
          {{#if userLogin}}
          <a href="" id="schedule-user" class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            title="Lịch cá nhân"></i></a>

            {{else}}
            <a href="" id="schedule-doctor" class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            title="Lịch cá nhân"></i></a>
            {{/if}}
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon medicals__sidenav__icon--active fa-solid fa-user-doctor"
            title="Danh sách bác sĩ"></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/inbox" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-brands fa-rocketchat"
            title="Danh sách cuộc họp"></i></a>
        </li>
         <li class="medicals__sidenav__item medicals__sidenav__item">
              {{#if userLogin}}
          <a href="/user" class="medicals__sidenav__link">
          <i
          class="medicals__sidenav__icon medicals__sidenav__icon fa-solid fa-gear"
            ></i></a>
            {{else}}
              {{#if doctorLogin}}
                  <a href="/doctor" class="medicals__sidenav__link">
              <i
              class="medicals__sidenav__icon medicals__sidenav__icon fa-solid fa-gear"
                ></i></a>
                 {{/if}}
               {{/if}}
        </li>
      </ul>
    </div>
    <div class="app-section overflow-y-scroll">
      <div class="app-section__hero h-[600px] flex items-center justify-center flex-col">
        <h2 class="app-section__header text-white text-3xl">CHĂM SÓC SỨC KHỎE TOÀN DIỆN</h2>
        
        <form class="app-container__input md:w-[400px] mx-5 my-8">
          <input
            type="search"
            name="search"
            id="search"
            placeholder="Nhập tên bác sỹ, chuyên khoa..."
            class="w-full hidden md:block"
          />
          <button type="submit">
            <i class="fa-solid fa-magnifying-glass app-container__icon"></i>
          </button>
        </form>
        <div
          class="app-section__status flex md:flex-row flex-col items-center justify-center text-white w-full my-3"
        >
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">150</h3>
            <p class="status__type">Bác sĩ</p>
          </div>
          <div class="status__item mr-5">
            <h3 class="status__number fw-bold text-2xl">20</h3>
            <p class="status__type">Khoa</p>
          </div>
        </div>
      </div>
      <div class="app-section__content">
        
        <div class="doctor-list w-full">
          <section class="app-container__section w-full mt-[30px]">
            <div
              class="app-container__section__header flex flex-row items-center justify-between w-full"
            >
              <div
                class="app-container__section__header__left flex flex-col flex-start"
              >
                <h3 class="app-container__section__title text-xl font-bold">
                  Chuyên khoa
                </h3>
                <h4 class="app-container__section__subtitle">
                  Những chuyên khoa phổ biến
                </h4>
              </div>
              <div class="app-container__section__header__right flex">
                <a href="/allClinic" class="btn--primary">XEM THÊM</a>
              </div>
            </div>
            
            <div class="app-container__section__content">
              <div
                class="main-carousel mt-4 px-2 py-3"
                data-flickity='{ "groupCells": true, "autoPlay": true, "cellAlign": "left"  }'
              >
                {{#each clinics}}
                  {{!-- <div
                    class="carousel-cell medicals__carousel-cell w-[250px] h-[250px] p-3 m-2 rounded-lg flex flex-col justify-between"
                  >
                    <a href="/clinics/{{this.id}}">
                      <div class="carousel-cell__header"></div>
                      <div
                        class="carousel-cell__content flex flex-col justify-between h-full"
                      >
                        <img
                          src="../uploads/{{this.image}}"
                          alt="image"
                          class="carousel-cell__image w-full h-[200px]"
                        />
                        <p class="carousel-cell__desc flex-end p-2 mx-auto font-bold">
                          {{this.name}}
                        </p>
                      </div>
                    </a>
                  </div> --}}
                  <a href="/clinics/{{this.id}}" class="medicals__card block p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 m-4  ">
                    <img
                      src="../uploads/{{this.image}}"
                      alt="image"
                      class="carousel-cell__image w-full h-[200px]"
                    />
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 mt-2 ">{{this.name}}</h5>
                  </a>
                {{/each}}
              </div>
            </div>
          </section>
          <section class="app-container__section w-full mt-[100px]">
            <div
              class="app-container__section__header flex flex-row items-center justify-between w-full"
            >
              <div
                class="app-container__section__header__left flex flex-col flex-start"
              >
                <h3 class="app-container__section__title text-xl font-bold">
                  Danh sách bác sĩ
                </h3>
                <h4 class="app-container__section__subtitle">
                  Chúng tôi có đội ngũ bác sĩ đầy kinh nghiệm và kiến thức
                  chuyên sâu
                </h4>
              </div>
              <div class="app-container__section__header__right flex">
                <a href="/allDoctor" class="btn--primary">XEM THÊM</a>
              </div>
            </div>
            <div class="app-container__section__content w-full">
              <div
                class="main-carousel mt-4"
                data-flickity='{ "groupCells": true, "autoPlay": true, "cellAlign": "left"  }'
              >
                {{#each doctors}}
                  {{!-- <div
                    class="carousel-cell medicals__carousel-cell  w-[250px] h-[250px] p-3 m-2 rounded-lg flex flex-col justify-between"
                  >
                    <a href="/detailDoctor/{{this.id}}">
                      <div class="carousel-cell__header"></div>
                      <div
                        class="carousel-cell__content flex flex-col justify-between h-full"
                      >
                        <img
                          src="../uploads/{{this.image}}"
                          alt="image doctor"
                          class="carousel-cell__image rounded-full mx-auto w-[150px] h-[150px]"
                        />
                        <p
                          class="carousel-cell__desc flex flex-col items-center mt-2"
                        >
                          <span>Bác sĩ Chuyên khoa II</span>
                          <span class="font-bold">{{this.firstName}} {{this.lastName}}</span>
                          <span>{{this.clinicName}}</span>
                        </p>
                      </div>
                    </a>
                  </div> --}}
                  <a href="/detailDoctor/{{this.id}}" class="medicals__card block p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 m-4  min-h-[250px]">
                    <img
                      src="../uploads/{{this.image}}"
                      alt="image doctor"
                      class="carousel-cell__image w-[200px] h-[200px] rounded-full"
                    />
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 mt-2 ">{{this.firstName}} {{this.lastName}}</h5>
                    <p class="font-normal text-gray-700">{{this.clinicName}}</p>
                  </a>
                {{/each}}
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
</div>
<script src = "../script/handleLinkSchedule.js"></script>