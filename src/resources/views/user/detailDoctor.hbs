<div class="app-container flex flex-col homepage-container">
  {{>nav}}
  <main class="app__main flex w-full">
    <div class="medicals__sidenav max-w-[70px] mt-[100px]">
      <ul class="medicals__sidenav__list flex flex-col justify-center">
        <li class="medicals__sidenav__item medicals__sidenav__item">
         {{#if userLogin}}
          <a href="" class="medicals__sidenav__link" id="schedule-user" ><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            title="Lịch cá nhân"></i></a>

            {{else}}
            <a href=""  id="schedule-doctor"  class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            title="Lịch cá nhân"></i></a>
            {{/if}}
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon medicals__sidenav__icon--active fa-solid fa-user-doctor"
            ></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/inbox" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-brands fa-rocketchat"
            ></i></a>
        </li>
          <li class="medicals__sidenav__item medicals__sidenav__item">
              {{#if userLogin}}
          <a href="/user" class="medicals__sidenav__link">
          <i
          class="medicals__sidenav__icon medicals__sidenav__icon fa-solid fa-gear"
            ></i></a>
            {{else}}
              {{#if doctorLogin}}
                  <a href="/doctor" class="medicals__sidenav__link">
              <i
              class="medicals__sidenav__icon medicals__sidenav__icon fa-solid fa-gear"
                ></i></a>
                 {{/if}}
               {{/if}}
        </li>
        
      </ul>
    </div>
    <div class="app-section overflow-y-scroll">
      <div class="app-section__controls mb-4 w-full">
        <a href="/" class="inline-flex items-center py-2 px-4 mr-3 text-sm font-medium text-gray-500 bg-white rounded-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700">
          <svg class="mr-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
          Trở về
        </a>
      </div>
      <div class="notification__container absolute bottom-24 z-50 flex items-end">
      {{!-- show message when booking successful  --}}
        {{#if messageBooking }}
        <div id="toast-success" class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow animate__animated animate__bounceIn dark:bg-gray-800 dark:text-gray-300 " role="alert">
          <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg dark:bg-green-800 dark:text-green-200">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div class="ml-3 text-sm font-normal">{{messageBooking}}</div>
          <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-success" aria-label="Close">
              <span class="sr-only">Close</span>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
          </button>
        </div>
        {{/if}} 
      </div>
      {{!-- <h2 class="app-section__header">Hồ sơ bác sĩ</h2> --}}
        <h2 class="app-section__header">Chuyên Khoa : {{doctor.clinicName}}</h2>
        <section
          class="app-container__section app-container__section__card w-full mt-[30px] flex flex-col"
        >
          <div
            class="app-container__section__header flex flex-row items-center justify-center w-full"
          >
            <div class="app-container__section__header__img w-full flex flex-col items-center justify-center ">
              
              <div class="flex flex-col items-center pb-10">
                <img class="mb-3 w-48 h-48 rounded-full shadow-lg" src="../uploads/{{doctor.image}}" alt="{{doctor.firstName}} {{doctor.lastName}}"/>
                <h5 class="text-2xl font-medium text-gray-900 ">{{doctor.firstName}} {{doctor.lastName}}</h5>
                {{!-- <span class="text-sm text-gray-500 ">{{doctor.clinicName}}</span> --}}
                <p class=" text-gray-500"><span class="font-bold">Giá tư vấn:</span> {{serviceFee.fee}} xu</p>
                <div class="flex mt-2 space-x-3 text-xl">
                    {{displayStarNo doctor.resumeStarNo }}
                </div>
                
              </div>
            </div>
          </div>
          <div class="app-container__section__content flex">
            <div class="is-half">
                <h2 class="font-bold text-xl mb-3">Giới thiệu chung</h2>
                <h3 class="text-lg mb-2">{{doctor.resumeTitle}}</h3>
                <p>{{doctor.resumeDescription}}</p>
            </div>
            <div class="ml-16">

              <h2 class="font-bold text-xl mb-3">
                Chọn ngày và giờ bạn muốn tư vấn
              </h2>
              <div class="relative max-w-sm">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
              </div>
              <input datepickerTime id="datepickerTime" type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Select date">
              </div>
              
              {{!-- <input id="datepickerTime" type="date"> --}}
              
              <div class="flex flex-wrap">
                {{!-- time render --}}
                {{#if timeWorks}}
                  {{#each timeWorks}}
                  <form action="/booking/bookingform" method="post" class="app-container__form form">
                    <input type="text" name="timeStart" value="{{this.startTime}}" hidden="true">
                    <input type="text" name="timeEnd" value="{{this.endTime}}" hidden="true">
                    <input type="text" name="doctorID" value="{{this.id}}" hidden="true">
                    <input type="text" name="serviceFee" value="{{this.serviceFee}}" hidden="true">
                    <input type="text" name="date" class="date" hidden="true" required>
                    <button
                      class="p-2 bg-gray-200 text-green-700 font-bold text-center mr-2 mt-2 booking-btn"
                      type="submit"
                    >
                      {{formatTime this.startTime}} -  {{formatTime this.endTime}}
                    </button>
                  </form>
                  {{/each}}
                {{else}}
                  <h3> Hiện tại không có lịch trống </h3>
                {{/if}}
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>
</div>

<script src = "../script/handleLinkSchedule.js"></script>
<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
<script>
  var date = new Date();
  var startDate = new Date(date.getFullYear(), date.getMonth(), date.getDate() - date.getDay() + 1);
  var endDate = new Date(date.getFullYear(), date.getMonth(), date.getDate() - date.getDay() + 7);
  $(function () {
    $('#datepickerTime').datepickerTime({
        dateFormat: 'yy-mm-dd',
        showButtonPanel: true,
        changeMonth: true,
        changeYear: true,
        yearRange: '1999:2012',
        showOn: "button",
        
        buttonImageOnly: true,
        minDate: new Date(),
        maxDate: endDate,
        inline: true
      });
    });
  $('#datepickerTime').on('change', function () {
    console.log($(this).val())
    $('.date').attr('value', $(this).val())
    console.log($('.date').val())
  })
</script>
