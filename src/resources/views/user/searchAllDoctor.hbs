<div class="app-container flex flex-col homepage-container">
  {{>nav}}
  
  <main class="app__main flex w-full">
    <div class="medicals__sidenav max-w-[70px] mt-[100px]">
      <ul class="medicals__sidenav__list flex flex-col justify-center">
          <li class="medicals__sidenav__item medicals__sidenav__item">
            {{#if userLogin}}
          <a href="" id="schedule-user" class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            title="Lịch cá nhân"></i></a>

            {{else}}
            <a href="" id="schedule-doctor" class="medicals__sidenav__link"><i
              class="fa-solid fa-calendar-days medicals__sidenav__icon"
            title="Lịch cá nhân"></i></a>
            {{/if}}
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon medicals__sidenav__icon--active fa-solid fa-user-doctor"
            title="Danh sách bác sĩ"></i></a>
        </li>
        <li class="medicals__sidenav__item medicals__sidenav__item">
          <a href="/inbox" class="medicals__sidenav__link"><i
              class="medicals__sidenav__icon fa-brands fa-rocketchat"
            title="Danh sách cuộc họp"></i></a>
        </li>
          <li class="medicals__sidenav__item medicals__sidenav__item">
              {{#if userLogin}}
          <a href="/user" class="medicals__sidenav__link">
          <i
          class="medicals__sidenav__icon medicals__sidenav__icon fa-solid fa-gear"
            ></i></a>
            {{else}}
              {{#if doctorLogin}}
                  <a href="/doctor" class="medicals__sidenav__link">
              <i
              class="medicals__sidenav__icon medicals__sidenav__icon fa-solid fa-gear"
                ></i></a>
                 {{/if}}
               {{/if}}
        </li>
      </ul>
    </div>
    <div class="app-section overflow-y-scroll">
      <div class="app-section__controls mb-4 w-full">
        <a href="/" class="inline-flex items-center py-2 px-4 mr-3 text-sm font-medium text-gray-500 bg-white rounded-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700">
          <svg class="mr-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
          Trở về
        </a>
      </div>
      <div class="app-section__content">
        <div class="doctor-list flex w-full flex-wrap">
          {{#each listDoctorRender}}
                  <div class="flex flex-col justify-between max-w-[270px] w-[270px]  bg-white rounded-lg border border-gray-200 shadow-md mx-5 my-6">
                    <a href="#">
                        <img class="rounded-t-lg max-w-[270px] w-[270px]" src="../uploads/{{this.image}}" alt="{{this.firstName}} {{this.lastName}}" />
                    </a>
                    <div class="p-5 flex flex-col items-between justify-between max-w-[250px]">
                      <div>
                        <a href="#">
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 ">{{this.firstName}} {{this.lastName}}</h5>
                        </a>
                        <p class="mb-3 font-normal text-gray-700 "><strong class="text-sm">Email:</strong> <span class="block">{{this.email}}</span></p>
                        <p class="mb-3 font-normal text-gray-700 "><strong class="text-sm">Số điện thoại:</strong> <span class="block">{{this.phoneNumber}}</span></p>
                        
                      </div>

                    </div>
                    <div class="px-5 pb-5">
                      <a href="/detailDoctor/{{this.id}}" class="btn--primary inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 ">
                          Xem chi tiết
                          <svg class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                      </a>

                    </div>
                  </div>
          {{/each}}
        </div>
      </div>
    </div>
  </main>
</div>
<script src = "../script/handleLinkSchedule.js"></script>